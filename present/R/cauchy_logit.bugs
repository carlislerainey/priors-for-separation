# logistic regression with cauchy priors
model {
  # likelihood
  for (i in 1:n)  {
    y[i] ~ dbin(p.bound[i], 1)
    p.bound[i] <- max(0, min(1, p[i]))
    logit(p[i]) <- y.star[i]
    y.star[i] <- X[i, ]%*%beta
  }
  # prior for intercept
  beta[1] ~ dt(0, 1/((10)^2), 1)
  # prior for coefficients
  for (k in 2:K) {
    beta[k] ~ dt(0, 1/(scale^2), 1)
  }
}